    "drizzle-orm": "^0.43.1",
    "express": "^5.1.0",
    "flutterwave-node-v3": "^1.3.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.6",
    "tsx": "^4.19.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
